generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     String @default("user") 
  
  createdAt DateTime @default(now())
}

model Animal {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String  @unique 
  category String  
  habitat  String? 
  imageUrl String?
  isActive Boolean @default(true)
  
  createdAt DateTime @default(now())
  
  @@index([category])
}

model Category {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique 
  displayName String         
  icon        String?        
  
  createdAt DateTime @default(now())
}